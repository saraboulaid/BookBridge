@model UserApp.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier</h1>

<h4>Livre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Titre</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label">Auteur</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Genre</label>
                <select asp-for="Genre" asp-items="Html.GetEnumSelectList<UserApp.Models.Genre>()" class="form-control"></select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label">Date de publication</label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Image</label>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div>
                        <img src="@Model.ImagePath" alt="Current Image" style="max-height: 200px; max-width: 200px;" class="img-thumbnail" />
                    </div>
                }
                <label class="control-label">Charger une nouvelle image</label>
                <input class="form-control" type="file" name="imageFile" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCopies" class="control-label">Nombre d'exemplaires'</label>
                <input asp-for="NumberOfCopies" class="form-control" />
                <span asp-validation-for="NumberOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NumberOfLoans" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
