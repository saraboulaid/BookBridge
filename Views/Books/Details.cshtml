@model UserApp.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Détails</h1>

<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Auteur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Date de publication
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="@Model.Title" style="max-width: 200px; height: auto;" />
        </dd>
        <dt class="col-sm-2">
            Nombre d'exemplaires
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfCopies)
        </dd>
        <dt class="col-sm-2">
            Nombre d'emprunts'
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfLoans)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Modifier</a> |
    <a asp-action="Index">Retour à la liste</a>
</div>
