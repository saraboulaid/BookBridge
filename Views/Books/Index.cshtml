@model IEnumerable<UserApp.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste des livres</h1>

<form method="get" asp-action="Index" class="mb-4">
    <div class="row">
        <!-- Champ de recherche -->
        <div class="col-md-2">
            <select name="searchField" class="form-control">
                <option value="Title">Titre</option>
                <option value="Author">Auteur</option>
                <option value="PublicationDate">Date de publication</option>
            </select>
        </div>
        <div class="col-md-4">
            <input type="text" name="searchTerm" class="form-control" placeholder="Rechercher..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </div>
</form>
<form method="get" asp-action="Index" class="mb-4">
    <div class="row">
        <!-- Filtre par genre -->
        <div class="col-md-2">
            <select name="genreFilter" class="form-control">
                <option value="">Sélectionner un genre</option>
                @foreach (var genre in Enum.GetValues(typeof(UserApp.Models.Genre)).Cast<UserApp.Models.Genre>())
                {
                    <option value="@genre">@genre</option>
                }
            </select>
        </div>

        <!-- Filtre par disponibilité -->
        <div class="col-md-2">
            <select name="availabilityFilter" class="form-control">
                <option value="">Disponibilité</option>
                <option value="Disponible">Disponible</option>
                <option value="Indisponible">Indisponible</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </div>
    </div>
</form>

<p>
    <a asp-action="Create">Créer un nouveau livre</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Genre</th>
            <th>Date de publication</th>
            <th>Image</th>
            <th>Nombre d'exemplaires</th>
            <th>Nombre d'emprunts</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublicationDate)
                </td>
                <td>
                    <img src="@item.ImagePath" alt="@item.Title" style="max-width: 80px; height: auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfCopies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfLoans)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Modifier</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
