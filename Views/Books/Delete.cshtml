@model UserApp.Models.Book

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet élément ?</h3>
<div>
    <h4>Livre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Auteur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Date de publication
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-2">
            Nombre d'exemplaires
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfCopies)
        </dd>
        <dt class="col-sm-2">
            Nombre d'emprunts
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfLoans)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div>
